{
  "manifest_version": 3,
  "name": "AURA - Accessibility & Usability Reporting Assistant",
  "version": "2.0",
  "description": "Comprehensive WCAG 2.1 accessibility analyzer with detailed reporting and element highlighting",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs" 
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/4.png",
      "48": "icons/4.png",
      "128": "icons/4.png"
    }
  },
  "icons": {
    "16": "icons/4.png",
    "48": "icons/4.png",
    "128": "icons/4.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/axe.min.js", "utils/wcag-checks.js", "content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["utils/*", "icons/*", "expand.html", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}